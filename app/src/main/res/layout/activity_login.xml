<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:id="@+id/rootLayout"
    android:weightSum="1"
    android:gravity="center_horizontal"
    android:background="@drawable/background_for_main"
    tools:context="com.mohamed.abdelmoaty.chatproject.activities.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/login_logo"
        android:layout_weight="0.3"
        android:layout_marginBottom="20dp"
        android:src="@drawable/minion2"
        android:layout_height="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:layout_height="0dp">

        <EditText
            android:layout_width="match_parent"
            android:hint="Your Email"
            android:id="@+id/login_email"
            android:padding="15dp"
            android:fontFamily="@font/arkhip_font"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:background="@drawable/background_for_enter"
            android:textColorHint="@color/gray"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:hint="Password"
            android:id="@+id/login_password"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:fontFamily="@font/arkhip_font"
            android:textColorHint="@color/gray"
            android:background="@drawable/background_for_enter"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="Login"
            android:background="@drawable/background_for_btn"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:id="@+id/login_btn"
            android:padding="16dp"
            android:fontFamily="@font/arkhip_font"
            android:textAllCaps="false"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:text="Need a new Account?"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:background="#FFFFD500"
        android:id="@+id/register_btn"
        android:padding="15dp"
        android:textAllCaps="false"
        android:layout_weight="0.1"
        android:fontFamily="@font/arkhip_font"
        android:layout_height="0dp" />

</LinearLayout>
